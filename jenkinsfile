pipeline{
    agent
        any
    stages{
        stage("Checkout"){
            steps{
                git "https://github.com/hasib9669/springboot-backend.git"
            }
        }
        stage("Build"){
            steps{
                sh """
                mvn clean
                mvn package
                      """
            }
        }
        stage("Test"){
            steps{
                sh """
                mvn test"""
            }
        }
      
        stage("Deploy"){
            steps{
                sh """
                7z a -t7z ./springboot-backend.git
                echo 'build deployed'
                """
            }
        }
    }
    post{
        always{
            sh "rm -rf ./*"
        }
        success{
            echo "Pipeline ist erflogreich durchgelaufen"
        }
        failure{
            echo "Pipeline ist fehlgeschlagen"
        }
    }
    
    
}